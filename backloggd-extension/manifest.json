{
  "manifest_version": 3,
  "name": "Backloggd SearchBar",
  "version": "1.0",
  "description": "Busca y cachea juegos de Backloggd desde un popup",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://backloggd.com/u/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}